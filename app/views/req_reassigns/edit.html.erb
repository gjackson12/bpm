<%= req_edit_header("Редактировать заявку на перезакрепление", "req_reassigns", "Заявки на перезакрепление", "Заявка") %>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                <h5>Редактирование заявки на перезакрепление</h5>
                  <div class="ibox-tools">
                      <a class="collapse-link">
                          <i class="fa fa-chevron-up"></i>
                      </a>
                      <a class="close-link">
                          <i class="fa fa-times"></i>
                      </a>
                  </div>
              </div>
              <div class="ibox-content">
                <%= render 'shared/actions_and_assignees' %>
                <div class="hr-line-dashed"></div>
                <%= simple_form_for(@req) do |f| %>
                  <%= f.input :id, disabled: true %>
                  <%= f.input :state, disabled: true %>
                  <%= f.input :name, disabled: @req.is_disabled?("name") %> 
                  <%= f.input :client_id, collection: Client.order(:name).all, label_method: :name, value_method: :id, disabled: @req.is_disabled?("client")%>
                  <%= f.input :old_manager_id, collection: User.order(:name).all, label_method: :name, value_method: :id, disabled: true %>
                  <%= f.input :new_manager_id, collection: User.order(:name).all, label_method: :name, value_method: :id, disabled: @req.is_disabled?("new_manager") %>
                  <%= f.input :money, disabled: @req.is_disabled?("money") %>
                  <%= f.input :info, disabled: @req.is_disabled?("info") %>
                  <%= render 'shared/req_edit_buttons', f: f %>
                <% end %>
              </div>
          </div>
      </div>
  </div>
</div>
