<h1>Show Request</h1>
<div class="row">
  <div class="col-md-1">
    <div class="form-group">
      <%= link_to t(:home_link), root_path, class: "btn btn-default", id: "btn-home" %>
    </div>
  </div>
  <div class="col-md-1">
    <div class="form-group">
      <%= link_to 'Edit', edit_req_reassign_path(@req), class: "btn btn-success" %>
    </div>
  </div>  
</div>
<div class="row">
  <div class="col-md-6">
    <%= simple_form_for(@req) do |f| %>
      <%= f.input :state, disabled: true %>
      <%= f.input :role, disabled: true %>
      <%= f.input :name, disabled: true %>
      <%= f.input :manager, collection: User.all.collect { |x| x.email }, disabled: true %>
      <%= f.input :inn, disabled: true%>
      <%= f.input :money, disabled: true %>    
    <% end %>  
  </div>
</div>
<div class="row">
  <div class="col-md-1">
    <div class="form-group">
      <%= link_to t(:home_link), root_path, class: "btn btn-default" %>
    </div>
  </div>
  <div class="col-md-1">
    <div class="form-group">
      <%= link_to 'Edit', edit_req_reassign_path(@req), class: "btn btn-success" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="alert alert-info" role="alert">
      <b>List of Available actions:</b><br/>
      <%= @req.state_events %>
    </div>
  </div>
</div>
